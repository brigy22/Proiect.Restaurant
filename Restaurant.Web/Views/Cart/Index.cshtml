@model List<Restaurant.Web.Models.CartItem>

@{
    ViewData["Title"] = "Cart";
    var total = Model.Sum(x => x.Price * x.Quantity);
}

<h1>Cart</h1>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Item</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Name</td>
                    <td>@x.Price</td>
                    <td>@x.Quantity</td>
                    <td>@(x.Price* x.Quantity)</td>
                    <td>
                        <form asp-action="Remove" method="post">
                            <input type="hidden" name="menuItemId" value="@x.MenuItemId" />
                            <button class="btn btn-sm btn-danger" type="submit">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p><strong>Total:</strong> @total</p>

    <form asp-controller="Checkout" asp-action="PlaceOrder" method="post" style="display:inline;">
        <button class="btn btn-success" type="submit">Place Order</button>
    </form>

    <form asp-action="Clear" method="post" style="display:inline;">
        <button class="btn btn-secondary" type="submit">Clear</button>
    </form>
}
